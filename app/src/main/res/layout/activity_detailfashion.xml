<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/off"

    tools:context=".DetailfashionActivity">


    <ImageView

        android:id="@+id/detailfashimageview"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        />
    <TextView
        android:id="@+id/detailfashnametext"
        android:gravity="center"

        android:textStyle="bold"
        android:textSize="25sp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        />
    <LinearLayout
        android:background="@color/white"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="30dp">

        <ImageView
            android:id="@+id/fashplus"
            android:src="@drawable/plus"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            />
        <TextView
            android:id="@+id/fashquantity"
            android:text="1"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <ImageView
            android:id="@+id/fashminus"
            android:src="@drawable/minus"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            />

    </LinearLayout>

    <EditText
        android:id="@+id/fashionpersonname"
        android:background="@drawable/edittext_background"
        android:hint="  Your Name"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"

        />

    <EditText

        android:background="@drawable/edittext_background"
        android:hint="  Phone Number"
        android:id="@+id/fashionphone"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:ems="10"
        android:inputType="phone"
        />

    <TextView
        android:textStyle="bold"
        android:textSize="25sp"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="Price"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center"
        >

        <TextView
            android:textSize="25sp"
            android:textStyle="bold"
            android:text="Tk :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            />


        <TextView
            android:id="@+id/detailfashpricetext"
            android:layout_marginLeft="10dp"
            android:text="300"
            android:textColor="@color/green"
            android:textStyle="bold"
            android:textSize="25sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            />

    </LinearLayout>

    <Button

        android:id="@+id/fashionbutton"
        android:background="@drawable/buton_background"
        android:text="Add to Cart"
        android:textSize="20sp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_margin="40dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        />


</LinearLayout>